{% extends '@OctopouceAdvertising/Admin/layout.html.twig' %}

{% trans_default_domain 'advertising' %}

{% block title %}Create advert - {{ parent() }}{% endblock %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>Add advert for the campaign : {{ campaign.name }} {% if adzone %}in the adzone : {{ adzone.name }}{% endif %}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                {% if campaign.adverts|length > 0 and adzone %}
                    <ul class="tabs transparent">
                        <li class="tab col s3"><a class="active" href="#exist">Existing advert</a></li>
                        <li class="tab col s3"><a href="#new">Create advert</a></li>
                    </ul>
                {% endif %}
                {% if campaign.adverts|length > 0 and adzone %}
                    <div id="exist" class="col s12">
                        {% for advert in campaign.adverts %}
                            <div class="col s3">
                                <div class="box">
                                    <div class="bg-img" style="background-image: url('{{ asset(advert.imageDesktop.pathname) }}');"></div>
                                    <a class="content center-align" href="{{ path('octopouce_advertising_admin_advert_link', {'advert':advert.id, 'adzone':adzone.id}) }}">
                                        <br>
                                        <b>{{ advert.name }}</b>
                                        <br><br>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
                <div id="new" class="col s12">
                    <div class="row">
                        <div class="col s12">
                            Create a new advert
                            <div class="box">
                                <div class="content">
                                    {{ form(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
{% endblock %}

