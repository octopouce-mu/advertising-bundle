{% extends '@OctopouceAdvertising/Admin/layout.html.twig' %}

{% block title %}Create advert - {{ parent() }}{% endblock %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>Add advert for the campaign {{ campaign.name }} in the adzone {{ adzone.name }}</h1>
            </div>
        </div>
        {% if campaign.adverts|length > 0 %}
        <div class="row">
            <div class="col s12">Select an existing advert</div>
            {% for advert in campaign.adverts %}
                <div class="col s3">
                    <div class="box">
                        <div class="bg-img" style="background-image: url('{{ asset(advert.imageDesktop.pathname) }}');"></div>
                        <a class="content" href="{{ path('octopouce_advertising_admin_advert_link', {'advert':advert.id, 'adzone':adzone.id}) }}">
                            <b>{{ advert.name }}</b>
                        </a>
                    </div>
                </div>
            {% endfor %}
            <div class="col s12">OR</div>
        </div>
        {% endif %}
        <div class="row">
            <div class="col s12">
                Create a new advert
                <div class="box">
                    <div class="content">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

