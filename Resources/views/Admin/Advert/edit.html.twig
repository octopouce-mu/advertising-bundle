{% extends '@OctopouceAdvertising/Admin/layout.html.twig' %}

{% block title %}Edit advert {{ advert.id }} - {{ parent() }}{% endblock %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>Edit advert {{ advert.name }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="box">
                    <div class="content">
                        {{ form_start(form) }}
                            {{ form_row(form.name) }}
                            {{ form_row(form.link) }}
                            <div class="row">
                                {% if advert.imageDesktop %}
                                    <div class="col s3">
                                        <img src="{{ asset(advert.imageDesktop.pathname) }}" alt="" width="100%">
                                    </div>
                                {% endif %}
                                <div class="col s9">
                                    {{- form_label(form.imageDesktop) -}}
                                    {{- form_widget(form.imageDesktop) -}}
                                </div>
                            </div>
                            <div class="row">
                                {% if advert.imageTablet %}
                                    <div class="col s3">
                                        <img src="{{ asset(advert.imageTablet.pathname) }}" alt="" width="100%">
                                    </div>
                                {% endif %}
                                <div class="col s9">
                                    {{- form_label(form.imageTablet) -}}
                                    {{- form_widget(form.imageTablet) -}}
                                </div>
                            </div>
                            <div class="row">
                                {% if advert.imageMobile %}
                                    <div class="col s3">
                                        <img src="{{ asset(advert.imageMobile.pathname) }}" alt="" width="100%">
                                    </div>
                                {% endif %}
                                <div class="col s9">
                                    {{- form_label(form.imageMobile) -}}
                                    {{- form_widget(form.imageMobile) -}}
                                </div>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}