{% extends 'admin/layout.html.twig' %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>Edit advert {{ advert.name }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="box">
                    <div class="content">
                        {{ form_start(form) }}
                            {{ form_row(form.name) }}
                            {{ form_row(form.link) }}
                            <div class="row">
                                <div class="col s3">
                                    <img src="{{ asset(advert.imageDesktop) }}" alt="" width="100%">
                                </div>
                                <div class="col s9">
                                    {{- form_label(form.imageDesktop) -}}
                                    {{- form_widget(form.imageDesktop) -}}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s3">
                                    <img src="{{ asset(advert.imageTablet) }}" alt="" width="100%">
                                </div>
                                <div class="col s9">
                                    {{- form_label(form.imageTablet) -}}
                                    {{- form_widget(form.imageTablet) -}}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s3">
                                    <img src="{{ asset(advert.imageMobile) }}" alt="" width="100%">
                                </div>
                                <div class="col s9">
                                    {{- form_label(form.imageMobile) -}}
                                    {{- form_widget(form.imageMobile) -}}
                                </div>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}