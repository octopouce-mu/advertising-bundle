{% extends 'admin/layout.html.twig' %}

{% block main %}
    <section class="dashboard padding-filter">
        <div class="row">
            <div class="col s12">Campaigns enable</div>

            {% for campaign in campaignsEnable %}
                <div class="col s6 m6 l2">
                    <div class="box">
                        <div class="title">{{ campaign.name }}</div>
                        <div class="content">
                            Start : {{ campaign.startDate | date('d/m/Y') }} <br>
                            End : {{ campaign.endDate | date('d/m/Y') }} <br>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col s12">Campaigns disable</div>
            {% for campaign in campaignsDisable %}
                <div class="col s6 m6 l2">
                    <div class="box">
                        <div class="title">{{ campaign.name }}</div>
                        <div class="content">
                            Start : {{ campaign.startDate | date('d/m/Y') }} <br>
                            End : {{ campaign.endDate | date('d/m/Y') }} <br>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}