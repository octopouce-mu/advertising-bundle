{% extends 'admin/layout.html.twig' %}

{% block main %}
    <section class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>All campaigns <a href="{{ path('octopouce_advertising_admin_campaign_create') }}" class="waves-effect waves-light btn green"><i class="fas fa-plus"></i></a></h1>
            </div>
        </div>
        {% if campaignsActive %}
            <div class="row">
                <div class="col s12">Active</div>
                {% for campaign in campaignsActive %}
                    <div class="col s6 m6 l2">
                        <div class="box">
                            <div class="title"><a href="{{ path('octopouce_advertising_admin_campaign_show', {'campaign':campaign.id}) }}">{{ campaign.name }}</a></div>
                            <div class="content">
                                Start : {{ campaign.startDate | date('d/m/Y') }} <br>
                                End : {{ campaign.endDate | date('d/m/Y') }} <br>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if campaignsFuture %}
            <div class="row">
                <div class="col s12">À venir</div>
                {% for campaign in campaignsFuture %}
                    <div class="col s6 m6 l2">
                        <div class="box">
                            <div class="title"><a href="{{ path('octopouce_advertising_admin_campaign_show', {'campaign':campaign.id}) }}">{{ campaign.name }}</a></div>
                            <div class="content">
                                Start : {{ campaign.startDate | date('d/m/Y') }} <br>
                                End : {{ campaign.endDate | date('d/m/Y') }} <br>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if campaignsPassed %}
            <div class="row">
                <div class="col s12">Passé</div>
                {% for campaign in campaignsPassed %}
                    <div class="col s6 m6 l2">
                        <div class="box">
                            <div class="title"><a href="{{ path('octopouce_advertising_admin_campaign_show', {'campaign':campaign.id}) }}">{{ campaign.name }}</a></div>
                            <div class="content">
                                Start : {{ campaign.startDate | date('d/m/Y') }} <br>
                                End : {{ campaign.endDate | date('d/m/Y') }} <br>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </section>
{% endblock %}