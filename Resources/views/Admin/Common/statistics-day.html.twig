{% trans_default_domain 'advertising' %}

<div class="row">
    <div class="col s6 m6 l3">
        <div class="box">
            <div class="title">{{ 'clicks'|trans }}</div>
            <div class="content">
                {{ clicks }}
            </div>
        </div>
    </div>
    <div class="col s6 m6 l3">
        <div class="box">
            <div class="title">{{ 'impressions'|trans }}</div>
            <div class="content">
                {{ impressions }}
            </div>
        </div>
    </div>
    <div class="col s6 m6 l3">
        <div class="box">
            <div class="title">{{ 'ctr'|trans }}</div>
            <div class="content">
                {% if impressions %}
                    {{ ((clicks * 100) / impressions)|round(2) }}%
                {% else %}
                    -
                {% endif %}
            </div>
        </div>
    </div>
    {% if today is defined and today %}
        <div class="col s6 m6 l3">
            <div class="box">
                <div class="title">{{ 'stat_of_day'|trans }}</div>
                <div class="content">
                    {{ 'now'|date('d/m/Y') }}
                </div>
            </div>
        </div>
    {% endif %}
</div>