{% extends 'admin/layout.html.twig' %}

{% block main %}
    <section class="dashboard padding-filter">
        <div class="row">
            <div class="col s6 m6 l3">
                <div class="box">
                    <div class="title">Clicks</div>
                    <div class="content">
                        2
                    </div>
                </div>
            </div>
            <div class="col s6 m6 l3">
                <div class="box">
                    <div class="title">Impressions</div>
                    <div class="content">
                        2
                    </div>
                </div>
            </div>
            <div class="col s6 m6 l3">
                <div class="box">
                    <div class="title">CTR</div>
                    <div class="content">
                        2%
                    </div>
                </div>
            </div>

            <div class="col s6 m6 l3">
                <div class="box">
                    <div class="title">Statistic of day</div>
                    <div class="content">
                        {{ 'now'|date('d/m/Y') }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">Adzones (by popularity)</div>

            {% for adzone in adzones|slice(0, 5) %}
                <div class="col s6 m6 l2">
                    <div class="box">
                        <div class="title">{{ adzone.name }}</div>
                        <div class="content">
                            {{ adzone.totalViews }}
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="col s6 m6 l2">
                <div class="box">
                    <div class="title">All adzones</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">Adverts actifs</div>

            {% for advert in adverts %}
                <div class="col s6 m6 l2">
                    <div class="box">
                        <div class="title">{{ adzone.name }}</div>
                        <div class="content">
                            {{ adzone.totalViews }}
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="col s6 m6 l2">
                <div class="box">
                    <div class="title">All adverts</div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}